@**************************************************************************************************
 * _Layout.cshtml                                                                                 *
 **************************************************************************************************
 * This is the layout page which defines the site header, default scripts and stylesheets and     *
 * where is the body of the page to be rendered.                                                  *
 **************************************************************************************************@

<!DOCTYPE html>
<html lang="en">
    <head>
        @* This title  is meant to be set in each specific view *@
        <title>@ViewBag.Title</title>
        
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />
        <meta name="apple-mobile-web-app-capable" content="yes" />
        <meta name="apple-mobile-web-app-status-bar-style" content="black" />
        <meta name="format-detection" content="telephone=no"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        
        <link rel="apple-touch-startup-image" href="~/Content/images/ios-startup-image-landscape.png" media="(orientation:landscape)" />
        <link rel="apple-touch-startup-image" href="~/Content/images/ios-startup-image-portrait.png" media="(orientation:portrait)" />
        <link rel="apple-touch-icon" href="~/Content/images/icon.png"/>
        
        @* Render the css styles bundle (See App_Start/BundleConfig.cs) *@
        @Styles.Render("~/lib/css")

        <script type="text/javascript">
            if (navigator.userAgent.match(/IEMobile\/10\.0/)) {
                var msViewportStyle = document.createElement("style");
                var mq = "@@-ms-viewport{width:auto!important}";
                msViewportStyle.appendChild(document.createTextNode(mq));
                document.getElementsByTagName("head")[0].appendChild(msViewportStyle);
            }
        </script>

        <script type="text/javascript">
            window.userData = {
                FirstName: "@ViewBag.UserFirstName",
                LastName: "@ViewBag.UserLastName"
            };
        </script>

    </head>
    <body>
            @RenderBody()
            @RenderSection("scripts", required: false)        
    </body>
</html>
